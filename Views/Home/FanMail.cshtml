@{
    ViewBag.Header = "Calculate your Grades";
    ViewBag.Title = "Sam's #1 Page";
}
<body>
    <form class="calc">
        <label>Assignments:</label>
        <input id="a" type="number" min="0" max="100" />
        <br />
        <label>Group Projects:</label>
        <input id="gp" type="number" min="0" max="100" />
        <br />
        <label>Quizzes:</label>
        <input id="q" type="number" min="0" max="100" />
        <br />
        <label>Exams:</label>
        <input id="ex" type="number" min="0" max="100" />
        <br />
        <label>INTEX:</label>
        <input id="int" type="number" min="0" max="100" />
        <br />
        <input type="submit" value="Calculate" id="submitButton" class="button" />
    </form>
</body>
